---
import SEO from "../components/SEO.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import { GLOBAL } from "../lib/variables";
import ClickEffect from "../components/effects/ClickEffect";
import "../styles/click-effect.css";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  type?: "website" | "article";
  canonicalURL?: string | URL;
  breadcrumbs?: { name: string; url: string }[];
  keywords?: string;
}

const {
  title = "Ibedes - Creative Developer",
  description = "Portfolio dan blog personal Ibedes. Berbagi cerita tentang web development, teknologi, dan pengalaman belajar.",
  image,
  imageAlt,
  type,
  canonicalURL,
  breadcrumbs,
  keywords,
} = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <SEO
      title={title}
      description={description}
      image={image}
      imageAlt={imageAlt}
      type={type}
      canonicalURL={canonicalURL}
      breadcrumbs={breadcrumbs}
      keywords={keywords}
    />
    <script is:inline>
      (() => {
        try {
          const THEME_KEY = "ibedes-theme";
          const stored = localStorage.getItem(THEME_KEY);
          const prefersDark = window.matchMedia?.("(prefers-color-scheme: dark)")?.matches;
          const theme = stored || (prefersDark ? "dark" : "light");
          document.documentElement.classList.toggle("dark", theme === "dark");
          document.documentElement.dataset.theme = theme;
        } catch (error) {
          console.warn("[Theme] Failed to initialize theme preference", error);
        }
      })();
    </script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TQ2GF3GCCX"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-TQ2GF3GCCX");
    </script>

