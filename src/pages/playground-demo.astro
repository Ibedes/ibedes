            <section class="demo-section">
                <h2>2. JavaScript Interaktif - Counter App</h2>
                <p>
                    Aplikasi counter sederhana dengan increment dan decrement:
                </p>

                <CodePlayground
                    title="Interactive Counter"
                    html={`<div class="counter-app">
  <h2>Counter App</h2>
  <div class="counter-display">
    <span id="count">0</span>
  </div>
  <div class="counter-controls">
    <button id="decrease" class="control-btn">-</button>
    <button id="reset" class="control-btn reset">Reset</button>
    <button id="increase" class="control-btn">+</button>
  </div>
</div>`}
                    css={`body {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
}

.counter-app {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 20px;
  padding: 3rem;
  text-align: center;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.counter-app h2 {
  color: white;
  margin-bottom: 2rem;
  font-size: 2rem;
}

.counter-display {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 2rem;
  margin-bottom: 2rem;
}

#count {
  font-size: 4rem;
  font-weight: 700;
  color: #4ecdc4;
  text-shadow: 0 0 20px rgba(78, 205, 196, 0.5);
}

.counter-controls {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

.control-btn {
  background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
  color: white;
  border: none;
  width: 60px;
  height: 60px;
  border-radius: 12px;
  font-size: 1.5rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
}

.control-btn:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 20px rgba(255, 107, 107, 0.5);
}

.control-btn:active {
  transform: translateY(-2px);
}

.control-btn.reset {
  background: linear-gradient(135deg, #95a5a6, #7f8c8d);
}`}
                    js={`let count = 0;

const countDisplay = document.getElementById('count');
const decreaseBtn = document.getElementById('decrease');
const resetBtn = document.getElementById('reset');
const increaseBtn = document.getElementById('increase');

function updateDisplay() {
  countDisplay.textContent = count;
  
  // Change color based on value
  if (count > 0) {
    countDisplay.style.color = '#4ecdc4';
  } else if (count < 0) {
    countDisplay.style.color = '#ff6b6b';
  } else {
    countDisplay.style.color = '#95a5a6';
  }
}

decreaseBtn.addEventListener('click', () => {
  count--;
  updateDisplay();
});

increaseBtn.addEventListener('click', () => {
  count++;
  updateDisplay();
});

resetBtn.addEventListener('click', () => {
  count = 0;
  updateDisplay();
});`}
                    height="650px"
                />
