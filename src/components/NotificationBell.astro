---
/**
 * NotificationBell Component
 * Komponen icon notifikasi yang terintegrasi di header
 * Menampilkan badge jumlah notifikasi dan dropdown panel
 * Hanya muncul di halaman admin
 */

interface Props {
    isAdmin?: boolean;
}

const { isAdmin = false } = Astro.props;

// Jika bukan admin, jangan render apa-apa
if (!isAdmin) {
    return null;
}
---

<div class="notification-bell-container" data-notification-bell>
    <button
        type="button"
        class="notification-bell-trigger"
        aria-label="Notifikasi"
        data-notification-trigger
    >
        <i class="fa-solid fa-bell"></i>
        <span class="notification-badge" data-notification-badge>0</span>
    </button>

    <div class="notification-panel" data-notification-panel>
        <div class="notification-panel-header">
            <div class="flex items-center gap-2">
                <i class="fa-solid fa-bell text-lg"></i>
                <h3 class="notification-panel-title">Notifikasi</h3>
            </div>
            <div class="notification-panel-actions">
                <button
                    type="button"
                    class="notification-icon-btn"
                    data-mark-all-read
                    title="Tandai semua sudah dibaca"
                >
                    <i class="fa-solid fa-check-double"></i>
                </button>
                <button
                    type="button"
                    class="notification-icon-btn"
                    data-clear-all
                    title="Hapus semua"
                >
                    <i class="fa-solid fa-trash"></i>
                </button>
            </div>
        </div>

        <div class="notification-filters">
            <button class="filter-chip active" data-filter="all">
                <i class="fa-solid fa-list"></i>
                <span>Semua</span>
            </button>
            <button class="filter-chip" data-filter="newsletter">
                <i class="fa-solid fa-envelope"></i>
                <span>Newsletter</span>
            </button>
            <button class="filter-chip" data-filter="like">
                <i class="fa-solid fa-heart"></i>
                <span>Like</span>
            </button>
            <button class="filter-chip" data-filter="comment">
                <i class="fa-solid fa-comment"></i>
                <span>Komentar</span>
            </button>
        </div>

        <div class="notification-list" data-notification-list>
            <p class="notification-empty">Belum ada notifikasi.</p>
        </div>
    </div>
</div>

<script>
    import {
        loadNotifications,
        markAsRead,
        markAllAsRead,
        deleteNotification,
        clearAllNotifications,
        type Notification,
        type NotificationType,
    } from "../lib/notifications";
    import { supabase } from "../lib/supabase";

    class NotificationBell {
        private root: HTMLElement;
        private trigger: HTMLElement | null;
        private panel: HTMLElement | null;
        private badge: HTMLElement | null;
        private listElement: HTMLElement | null;
        private filterButtons: NodeListOf<HTMLElement>;
        private currentFilter: NotificationType | "all" = "all";
        private checkInterval: number | null = null;
        private isOpen = false;
        private currentNotifications: Notification[] = []; // Store current notifications
        private realtimeChannel: any = null;

        constructor(root: HTMLElement) {
            this.root = root;
            this.trigger = root.querySelector("[data-notification-trigger]");
            this.panel = root.querySelector("[data-notification-panel]");
            this.badge = root.querySelector("[data-notification-badge]");
            this.listElement = root.querySelector("[data-notification-list]");
            this.filterButtons = root.querySelectorAll("[data-filter]");
        }

        async init() {
            if (!this.trigger || !this.panel) return;

            this.setupEventListeners();
            this.setupPolling();
            this.setupStorageListener();
            this.setupRealtime();
            await this.loadAndDisplay();
        }

        setupEventListeners() {
            // Toggle panel
            this.trigger?.addEventListener("click", (e) => {
                e.stopPropagation();
                this.togglePanel();
            });

            // Close when clicking outside
            document.addEventListener("click", (e) => {
                const target = e.target as HTMLElement;
                if (
                    this.isOpen &&
                    !this.root.contains(target)
                ) {
                    this.closePanel();
                }
            });

            // Filter buttons
            this.filterButtons.forEach((btn) => {
                btn.addEventListener("click", () => {
                    const filter = btn.getAttribute("data-filter") as
                        | NotificationType
                        | "all";
                    this.setFilter(filter);
                });
            });

            // Mark all as read
            document
                .querySelector("[data-mark-all-read]")
                ?.addEventListener("click", async () => {
                    await markAllAsRead();
                    await this.loadAndDisplay();
                    this.showToast("Semua notifikasi ditandai sudah dibaca");
                });

            // Clear all
            document
                .querySelector("[data-clear-all]")
                ?.addEventListener("click", async () => {
                    if (confirm("Hapus semua notifikasi?")) {
                        await clearAllNotifications();
                        await this.loadAndDisplay();
                        this.showToast("Semua notifikasi dihapus");
                    }
                });

            // Close on Escape
            document.addEventListener("keydown", (e) => {
                if (e.key === "Escape" && this.isOpen) {
                    this.closePanel();
                }
            });
        }

        setupPolling() {
            // Poll for new notifications every 10 seconds
            this.checkInterval = window.setInterval(async () => {
                await this.loadAndDisplay();
            }, 10000);
        }

        setupRealtime() {
            // Optional realtime listener via Supabase if config is available
            if (!supabase) return;
            this.realtimeChannel = supabase
                .channel("notifications-bell")
                .on(
                    "postgres_changes",
                    {
                        event: "INSERT",
                        schema: "public",
                        table: "notifications",
                    },
                    async () => {
                        await this.loadAndDisplay();
                    },
                )
                .subscribe((status) => {
                    if (status === "SUBSCRIBED") {
                        // no-op; just confirm
                    }
                });
        }

        setupStorageListener() {
            // Listen for storage changes from other tabs
            window.addEventListener("storage", async (e) => {
                if (e.key === "ibedes:admin:notifications") {
                    await this.loadAndDisplay();
                }
            });

            // Listen for custom notification events
            window.addEventListener("notification:new", ((e: CustomEvent) => {
                this.loadAndDisplay();
                this.showNewNotificationToast(e.detail);
            }) as EventListener);
        }

        async togglePanel() {
            this.isOpen = !this.isOpen;
            this.panel?.classList.toggle("open", this.isOpen);
            this.trigger?.classList.toggle("active", this.isOpen);

            if (this.isOpen) {
                await this.loadAndDisplay();
            }
        }

        closePanel() {
            this.isOpen = false;
            this.panel?.classList.remove("open");
            this.trigger?.classList.remove("active");
        }

        setFilter(filter: NotificationType | "all") {
            this.currentFilter = filter;

            // Update active filter button
            this.filterButtons.forEach((btn) => {
                const btnFilter = btn.getAttribute("data-filter");
                btn.classList.toggle("active", btnFilter === filter);
            });

            this.loadAndDisplay();
        }

        async loadAndDisplay() {
            const store = await loadNotifications();
            let notifications = store.notifications;

            // Apply filter
            if (this.currentFilter !== "all") {
                notifications = notifications.filter(
                    (n) => n.type === this.currentFilter,
                );
            }

            this.updateBadge(store.unreadCount);
            this.renderNotifications(notifications);
        }

        updateBadge(count: number) {
            if (this.badge) {
                this.badge.textContent = count > 99 ? "99+" : count.toString();
                this.badge.classList.toggle("visible", count > 0);
            }
        }

        renderNotifications(notifications: Notification[]) {
            if (!this.listElement) return;

            // Store notifications for event listeners
            this.currentNotifications = notifications;

            if (notifications.length === 0) {
                this.listElement.innerHTML =
                    '<p class="notification-empty">Belum ada notifikasi.</p>';
                return;
            }

            this.listElement.innerHTML = notifications
                .slice(0, 20)
                .map((notification) =>
                    this.renderNotificationItem(notification),
                )
                .join("");

            // Add event listeners
            this.listElement
                .querySelectorAll("[data-notification-id]")
                .forEach((item) => {
                    const id = item.getAttribute("data-notification-id");
                    if (!id) return;

                    // Find the notification object by ID from stored notifications
                    const getNotification = () =>
                        this.currentNotifications.find((n) => n.id === id);

                    // Mark as read on click and show popover
                    item.addEventListener("click", async (e) => {
                        const target = e.target as HTMLElement;
                        // Don't trigger if clicking delete button
                        if (target.closest("[data-delete-notification]")) {
                            return;
                        }

                        const notification = getNotification();

                        if (!notification) {
                            console.error("Notification not found for ID:", id);
                            return;
                        }

                        // Mark as read
                        if (!notification.read) {
                            await markAsRead(id);
                            await this.loadAndDisplay();
                        }

                        // Show popover
                        console.log("Calling showNotificationPopover...");
                        this.showNotificationPopover(
                            notification,
                            item as HTMLElement,
                        );
                    });

                    // Also mark as read on hover (after 1 second)
                    let hoverTimeout: number | null = null;
                    item.addEventListener("mouseenter", async () => {
                        const notif = getNotification();
                        if (notif && !notif.read) {
                            hoverTimeout = window.setTimeout(async () => {
                                await markAsRead(id);
                                await this.loadAndDisplay();
                            }, 1000); // Mark as read after 1 second hover
                        }
                    });

                    item.addEventListener("mouseleave", () => {
                        if (hoverTimeout) {
                            clearTimeout(hoverTimeout);
                            hoverTimeout = null;
                        }
                    });

                    // Delete button
                    const deleteBtn = item.querySelector(
                        "[data-delete-notification]",
                    );
                    deleteBtn?.addEventListener("click", async (e) => {
                        e.stopPropagation();
                        await deleteNotification(id);
                        await this.loadAndDisplay();
                        this.hideNotificationPopover();
                    });
                });
        }

        renderNotificationItem(notification: Notification): string {
            const icon = this.getNotificationIcon(notification.type);
            const iconColor = this.getNotificationColor(notification.type);
            const timeAgo = this.formatTimeAgo(notification.timestamp);

            return `
        <div 
          class="notification-item ${notification.read ? "read" : "unread"}" 
          data-notification-id="${notification.id}"
          data-type="${notification.type}"
        >
          <div class="notification-icon" style="background: ${iconColor}15; color: ${iconColor}">
            <i class="${icon}"></i>
          </div>
          <div class="notification-content">
            <p class="notification-title">${notification.title}</p>
            <p class="notification-message">${this.escapeHtml(notification.message)}</p>
            <p class="notification-time">${timeAgo}</p>
          </div>
          <div class="notification-actions">
            ${!notification.read ? '<span class="unread-dot"></span>' : ""}
            <button 
              type="button" 
              class="notification-delete-btn" 
              data-delete-notification
              title="Hapus"
            >
              <i class="fa-solid fa-xmark"></i>
            </button>
          </div>
        </div>
      `;
        }

        getNotificationIcon(type: NotificationType): string {
            const icons = {
                newsletter: "fa-solid fa-envelope",
                like: "fa-solid fa-heart",
                comment: "fa-solid fa-comment",
                bookmark: "fa-solid fa-bookmark",
            };
            return icons[type] || "fa-solid fa-bell";
        }

        getNotificationColor(type: NotificationType): string {
            const colors = {
                newsletter: "#10b981",
                like: "#ef4444",
                comment: "#3b82f6",
                bookmark: "#f59e0b",
            };
            return colors[type] || "#6b7280";
        }

        formatTimeAgo(timestamp: string): string {
            const date = new Date(timestamp);
            const now = new Date();
            const diff = now.getTime() - date.getTime();

            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);

            if (minutes < 1) return "Baru saja";
            if (minutes < 60) return `${minutes} menit lalu`;
            if (hours < 24) return `${hours} jam lalu`;
            if (days < 7) return `${days} hari lalu`;

            return date.toLocaleDateString("id-ID", {
                day: "numeric",
                month: "short",
                year:
                    date.getFullYear() !== now.getFullYear()
                        ? "numeric"
                        : undefined,
            });
        }

        escapeHtml(text: string): string {
            const div = document.createElement("div");
            div.textContent = text;
            return div.innerHTML;
        }

        showNotificationPopover(
            notification: Notification,
            anchorElement: HTMLElement,
        ) {
            // Remove existing popover
            this.hideNotificationPopover();

            const popover = document.createElement("div");
            popover.className = "notification-popover";
            popover.setAttribute("data-notification-popover", "");

            const icon = this.getNotificationIcon(notification.type);
            const iconColor = this.getNotificationColor(notification.type);
            const fullDate = new Date(notification.timestamp).toLocaleString(
                "id-ID",
                {
                    dateStyle: "full",
                    timeStyle: "medium",
                },
            );

            // Build metadata display
            let metadataHtml = "";
            if (notification.metadata) {
                if (notification.metadata.articleSlug) {
                    metadataHtml += `
                        <div class="popover-meta-item">
                            <i class="fa-solid fa-link"></i>
                            <span>Artikel: <strong>${this.escapeHtml(notification.metadata.articleTitle || notification.metadata.articleSlug)}</strong></span>
                        </div>
                    `;
                }
                if (notification.metadata.email) {
                    metadataHtml += `
                        <div class="popover-meta-item">
                            <i class="fa-solid fa-envelope"></i>
                            <span>Email: <strong>${this.escapeHtml(notification.metadata.email)}</strong></span>
                        </div>
                    `;
                }
                if (notification.metadata.commentText) {
                    metadataHtml += `
                        <div class="popover-meta-item">
                            <i class="fa-solid fa-comment-dots"></i>
                            <span>Komentar: "${this.escapeHtml(notification.metadata.commentText)}"</span>
                        </div>
                    `;
                }
                if (notification.metadata.userHash) {
                    metadataHtml += `
                        <div class="popover-meta-item">
                            <i class="fa-solid fa-user"></i>
                            <span>User: <code>${this.escapeHtml(notification.metadata.userHash.substring(0, 12))}...</code></span>
                        </div>
                    `;
                }
            }

            popover.innerHTML = `
                <div class="popover-header">
                    <div class="popover-icon" style="background: ${iconColor}15; color: ${iconColor}">
                        <i class="${icon}"></i>
                    </div>
                    <div class="popover-header-text">
                        <h4 class="popover-title">${notification.title}</h4>
                        <p class="popover-date">${fullDate}</p>
                    </div>
                    <button type="button" class="popover-close" data-popover-close>
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
                <div class="popover-body">
                    <p class="popover-message">${this.escapeHtml(notification.message)}</p>
                    ${metadataHtml ? `<div class="popover-metadata">${metadataHtml}</div>` : ""}
                </div>
                <div class="popover-footer">
                    <span class="popover-status ${notification.read ? "read" : "unread"}">
                        <i class="fa-solid fa-circle"></i>
                        ${notification.read ? "Sudah dibaca" : "Belum dibaca"}
                    </span>
                    <button type="button" class="popover-action-btn" data-popover-delete>
                        <i class="fa-solid fa-trash"></i>
                        Hapus
                    </button>
                </div>
            `;

            document.body.appendChild(popover);

            // Position popover
            const rect = anchorElement.getBoundingClientRect();
            const popoverRect = popover.getBoundingClientRect();

            // Calculate position (try to show on right, fallback to left)
            let left = rect.right + 10;
            let top = rect.top;

            // If popover goes off screen on right, show on left
            if (left + popoverRect.width > window.innerWidth - 20) {
                left = rect.left - popoverRect.width - 10;
            }

            // If popover goes off screen on left, center it
            if (left < 20) {
                left = (window.innerWidth - popoverRect.width) / 2;
            }

            // Adjust vertical position if needed
            if (top + popoverRect.height > window.innerHeight - 20) {
                top = window.innerHeight - popoverRect.height - 20;
            }
            if (top < 20) {
                top = 20;
            }

            popover.style.left = `${left}px`;
            popover.style.top = `${top}px`;

            // Animate in
            setTimeout(() => {
                popover.classList.add("visible");
            }, 10);

            // Event listeners
            popover
                .querySelector("[data-popover-close]")
                ?.addEventListener("click", () => {
                    this.hideNotificationPopover();
                });

            popover
                .querySelector("[data-popover-delete]")
                ?.addEventListener("click", async () => {
                    await deleteNotification(notification.id);
                    await this.loadAndDisplay();
                    this.hideNotificationPopover();
                    this.showToast("Notifikasi dihapus");
                });

            // Close on click outside
            const closeOnClickOutside = (e: MouseEvent) => {
                const target = e.target as HTMLElement;
                if (
                    !popover.contains(target) &&
                    !anchorElement.contains(target)
                ) {
                    this.hideNotificationPopover();
                    document.removeEventListener("click", closeOnClickOutside);
                }
            };
            setTimeout(() => {
                document.addEventListener("click", closeOnClickOutside);
            }, 100);

            // Close on Escape
            const closeOnEscape = (e: KeyboardEvent) => {
                if (e.key === "Escape") {
                    this.hideNotificationPopover();
                    document.removeEventListener("keydown", closeOnEscape);
                }
            };
            document.addEventListener("keydown", closeOnEscape);
        }

        hideNotificationPopover() {
            const existing = document.querySelector(
                "[data-notification-popover]",
            );
            if (existing) {
                existing.classList.remove("visible");
                setTimeout(() => existing.remove(), 200);
            }
        }

        showNewNotificationToast(detail: any) {
            // Show a brief toast for new notifications
            this.showToast("Notifikasi baru!", "info");
        }

        showToast(
            message: string,
            type: "success" | "error" | "info" = "success",
        ) {
            const toast = document.createElement("div");
            toast.className = "notification-toast";
            toast.textContent = message;
            toast.setAttribute("data-type", type);

            document.body.appendChild(toast);
            setTimeout(() => toast.classList.add("show"), 100);
            setTimeout(() => {
                toast.classList.remove("show");
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        destroy() {
            if (this.checkInterval) {
                clearInterval(this.checkInterval);
            }
            if (this.realtimeChannel) {
                supabase?.removeChannel(this.realtimeChannel);
                this.realtimeChannel = null;
            }
        }
    }

    // Initialize
    const startAll = () => {
        document
            .querySelectorAll<HTMLElement>("[data-notification-bell]")
            .forEach((container) => {
                const bell = new NotificationBell(container);
                bell.init();
            });
    };

    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", startAll);
    } else {
        startAll();
    }
</script>

