---
// Unified Notifications Component
// Displays all types of notifications: newsletter, likes, comments, bookmarks
---

<div class="unified-notifications">
    <div class="notification-header">
        <div class="flex items-center gap-2">
            <i class="fa-solid fa-bell text-lg"></i>
            <h3 class="font-display text-sm uppercase tracking-wider">
                Notifikasi
            </h3>
        </div>
        <div class="notification-header-actions">
            <span class="notification-badge" data-notification-count>0</span>
            <button
                type="button"
                class="notification-action-btn"
                data-mark-all-read
                title="Tandai semua sudah dibaca"
            >
                <i class="fa-solid fa-check-double"></i>
            </button>
            <button
                type="button"
                class="notification-action-btn"
                data-clear-all
                title="Hapus semua"
            >
                <i class="fa-solid fa-trash"></i>
            </button>
        </div>
    </div>

    <div class="notification-filters">
        <button class="filter-btn active" data-filter="all">
            <i class="fa-solid fa-list"></i>
            <span>Semua</span>
        </button>
        <button class="filter-btn" data-filter="newsletter">
            <i class="fa-solid fa-envelope"></i>
            <span>Newsletter</span>
        </button>
        <button class="filter-btn" data-filter="like">
            <i class="fa-solid fa-heart"></i>
            <span>Like</span>
        </button>
        <button class="filter-btn" data-filter="comment">
            <i class="fa-solid fa-comment"></i>
            <span>Komentar</span>
        </button>
    </div>

    <div class="notification-list" data-notification-list>
        <p class="empty-state">Belum ada notifikasi.</p>
    </div>
</div>

<script>
    import {
        loadNotifications,
        addNotification,
        markAsRead,
        markAllAsRead,
        deleteNotification,
        clearAllNotifications,
        formatNotification,
        type Notification,
        type NotificationType,
    } from "../../lib/notifications";

    class UnifiedNotifications {
        private listElement: HTMLElement | null;
        private countElement: HTMLElement | null;
        private markAllReadBtn: HTMLElement | null;
        private clearAllBtn: HTMLElement | null;
        private filterButtons: NodeListOf<HTMLElement>;
        private currentFilter: NotificationType | "all" = "all";
        private checkInterval: number | null = null;
        private eventSource: EventSource | null = null;

        constructor() {
            this.listElement = document.querySelector(
                "[data-notification-list]",
            );
            this.countElement = document.querySelector(
                "[data-notification-count]",
            );
            this.markAllReadBtn = document.querySelector(
                "[data-mark-all-read]",
            );
            this.clearAllBtn = document.querySelector("[data-clear-all]");
            this.filterButtons = document.querySelectorAll("[data-filter]");

            this.init();
        }

        async init() {
            await this.loadAndDisplay();
            this.setupEventListeners();
            this.setupPolling();
            this.setupStorageListener();
        }

        setupEventListeners() {
            // Filter buttons
            this.filterButtons.forEach((btn) => {
                btn.addEventListener("click", () => {
                    const filter = btn.getAttribute("data-filter") as
                        | NotificationType
                        | "all";
                    this.setFilter(filter);
                });
            });

            // Mark all as read
            this.markAllReadBtn?.addEventListener("click", async () => {
                await markAllAsRead();
                await this.loadAndDisplay();
                this.showToast(
                    "Semua notifikasi ditandai sudah dibaca",
                    "success",
                );
            });

            // Clear all
            this.clearAllBtn?.addEventListener("click", async () => {
                if (confirm("Hapus semua notifikasi?")) {
                    clearAllNotifications();
                    await this.loadAndDisplay();
                    this.showToast("Semua notifikasi dihapus", "success");
                }
            });
        }

        setupPolling() {
            // Poll for new notifications every 10 seconds
            this.checkInterval = window.setInterval(() => {
                this.checkForNewNotifications();
            }, 10000);
        }

        setupStorageListener() {
            // Listen for storage changes from other tabs
            window.addEventListener("storage", (e) => {
                if (e.key === "ibedes:admin:notifications") {
                    this.loadAndDisplay();
                }
            });

            // Listen for custom notification events
            window.addEventListener("notification:new", ((e: CustomEvent) => {
                const { type, metadata } = e.detail;
                const notification = formatNotification(type, metadata);
                addNotification(notification)
                    .then(() => this.loadAndDisplay())
                    .catch((err) => console.warn("Failed to add notification", err));
                this.showNotificationToast(notification);
            }) as EventListener);
        }

        async checkForNewNotifications() {
            await this.loadAndDisplay();
        }

        setFilter(filter: NotificationType | "all") {
            this.currentFilter = filter;

            // Update active filter button
            this.filterButtons.forEach((btn) => {
                const btnFilter = btn.getAttribute("data-filter");
                btn.classList.toggle("active", btnFilter === filter);
            });

            this.loadAndDisplay();
        }

        async loadAndDisplay() {
            const store = await loadNotifications();
            let notifications = store.notifications;

            // Apply filter
            if (this.currentFilter !== "all") {
                notifications = notifications.filter(
                    (n) => n.type === this.currentFilter,
                );
            }

            this.updateCount(store.unreadCount);
            this.renderNotifications(notifications);
        }

        updateCount(count: number) {
            if (this.countElement) {
                this.countElement.textContent = count.toString();
                this.countElement.classList.toggle(
                    "has-notifications",
                    count > 0,
                );
            }
        }

        renderNotifications(notifications: Notification[]) {
            if (!this.listElement) return;

            if (notifications.length === 0) {
                this.listElement.innerHTML =
                    '<p class="empty-state">Belum ada notifikasi.</p>';
                return;
            }

            this.listElement.innerHTML = notifications
                .slice(0, 20)
                .map((notification) =>
                    this.renderNotificationItem(notification),
                )
                .join("");

            // Add event listeners to notification items
            this.listElement
                .querySelectorAll("[data-notification-id]")
                .forEach((item) => {
                    const id = item.getAttribute("data-notification-id");
                    if (!id) return;

                    // Mark as read on click
                    item.addEventListener("click", () => {
                        markAsRead(id);
                        this.loadAndDisplay();
                    });

                    // Delete button
                    const deleteBtn = item.querySelector(
                        "[data-delete-notification]",
                    );
                    deleteBtn?.addEventListener("click", (e) => {
                        e.stopPropagation();
                        deleteNotification(id);
                        this.loadAndDisplay();
                    });
                });
        }

        renderNotificationItem(notification: Notification): string {
            const icon = this.getNotificationIcon(notification.type);
            const iconColor = this.getNotificationColor(notification.type);
            const timeAgo = this.formatTimeAgo(notification.timestamp);

            return `
        <div 
          class="notification-item ${notification.read ? "read" : "unread"}" 
          data-notification-id="${notification.id}"
          data-type="${notification.type}"
        >
          <div class="notification-icon" style="background: ${iconColor}15; color: ${iconColor}">
            <i class="${icon}"></i>
          </div>
          <div class="notification-content">
            <p class="notification-title">${notification.title}</p>
            <p class="notification-message">${this.escapeHtml(notification.message)}</p>
            <p class="notification-time">${timeAgo}</p>
          </div>
          <div class="notification-actions">
            ${!notification.read ? '<span class="unread-dot"></span>' : ""}
            <button 
              type="button" 
              class="notification-delete-btn" 
              data-delete-notification
              title="Hapus"
            >
              <i class="fa-solid fa-xmark"></i>
            </button>
          </div>
        </div>
      `;
        }

        getNotificationIcon(type: NotificationType): string {
            const icons = {
                newsletter: "fa-solid fa-envelope",
                like: "fa-solid fa-heart",
                comment: "fa-solid fa-comment",
                bookmark: "fa-solid fa-bookmark",
            };
            return icons[type] || "fa-solid fa-bell";
        }

        getNotificationColor(type: NotificationType): string {
            const colors = {
                newsletter: "#10b981",
                like: "#ef4444",
                comment: "#3b82f6",
                bookmark: "#f59e0b",
            };
            return colors[type] || "#6b7280";
        }

        formatTimeAgo(timestamp: string): string {
            const date = new Date(timestamp);
            const now = new Date();
            const diff = now.getTime() - date.getTime();

            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);

            if (minutes < 1) return "Baru saja";
            if (minutes < 60) return `${minutes} menit lalu`;
            if (hours < 24) return `${hours} jam lalu`;
            if (days < 7) return `${days} hari lalu`;

            return date.toLocaleDateString("id-ID", {
                day: "numeric",
                month: "short",
                year:
                    date.getFullYear() !== now.getFullYear()
                        ? "numeric"
                        : undefined,
            });
        }

        escapeHtml(text: string): string {
            const div = document.createElement("div");
            div.textContent = text;
            return div.innerHTML;
        }

        showNotificationToast(notification: Notification) {
            const toast = document.createElement("div");
            toast.className = "notification-toast";
            toast.innerHTML = `
        <div class="toast-icon" style="background: ${this.getNotificationColor(notification.type)}; color: white;">
          <i class="${this.getNotificationIcon(notification.type)}"></i>
        </div>
        <div class="toast-content">
          <p class="toast-title">${notification.title}</p>
          <p class="toast-message">${this.escapeHtml(notification.message)}</p>
        </div>
      `;

            document.body.appendChild(toast);
            setTimeout(() => toast.classList.add("show"), 100);
            setTimeout(() => {
                toast.classList.remove("show");
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        }

        showToast(message: string, type: "success" | "error" = "success") {
            const toast = document.createElement("div");
            toast.className = "simple-toast";
            toast.textContent = message;
            toast.style.background = type === "success" ? "#10b981" : "#ef4444";

            document.body.appendChild(toast);
            setTimeout(() => toast.classList.add("show"), 100);
            setTimeout(() => {
                toast.classList.remove("show");
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        destroy() {
            if (this.checkInterval) {
                clearInterval(this.checkInterval);
            }
            if (this.eventSource) {
                this.eventSource.close();
            }
        }
    }

    // Initialize
    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", () => {
            new UnifiedNotifications();
        });
    } else {
        new UnifiedNotifications();
    }
</script>

<style>
    .unified-notifications {
        background: var(--color-card, #fff);
        border: 1px solid
            color-mix(in srgb, var(--color-foreground) 10%, transparent);
        border-radius: 1rem;
        padding: 1.5rem;
        max-width: 600px;
    }

    .notification-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid
            color-mix(in srgb, var(--color-foreground) 10%, transparent);
    }

    .notification-header-actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .notification-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 1.5rem;
        height: 1.5rem;
        padding: 0 0.5rem;
        background: color-mix(
            in srgb,
            var(--color-foreground) 10%,
            transparent
        );
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 700;
        font-family: var(--font-mono);
    }

    .notification-badge.has-notifications {
        background: #ef4444;
        color: white;
        animation: pulse-badge 2s ease-in-out infinite;
    }

    .notification-action-btn {
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        border: none;
        border-radius: 0.375rem;
        color: color-mix(in srgb, var(--color-foreground) 60%, transparent);
        cursor: pointer;
        transition: all 0.2s;
    }

    .notification-action-btn:hover {
        background: color-mix(in srgb, var(--color-foreground) 5%, transparent);
        color: var(--color-foreground);
    }

    .notification-filters {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
        overflow-x: auto;
        padding-bottom: 0.5rem;
    }

    .filter-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: transparent;
        border: 1px solid
            color-mix(in srgb, var(--color-foreground) 15%, transparent);
        border-radius: 0.5rem;
        font-size: 0.875rem;
        font-weight: 500;
        white-space: nowrap;
        cursor: pointer;
        transition: all 0.2s;
    }

    .filter-btn:hover {
        background: color-mix(in srgb, var(--color-foreground) 5%, transparent);
    }

    .filter-btn.active {
        background: var(--color-foreground);
        color: var(--color-background);
        border-color: var(--color-foreground);
    }

    .notification-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        max-height: 500px;
        overflow-y: auto;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: color-mix(in srgb, var(--color-foreground) 50%, transparent);
        font-size: 0.875rem;
    }

    .notification-item {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.75rem;
        background: color-mix(
            in srgb,
            var(--color-background) 50%,
            transparent
        );
        border-radius: 0.5rem;
        cursor: pointer;
        transition: all 0.2s;
        position: relative;
    }

    .notification-item.unread {
        background: color-mix(in srgb, var(--color-foreground) 3%, transparent);
    }

    .notification-item:hover {
        background: color-mix(in srgb, var(--color-foreground) 8%, transparent);
        transform: translateX(4px);
    }

    .notification-icon {
        width: 2.5rem;
        height: 2.5rem;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem;
        font-size: 1rem;
    }

    .notification-content {
        flex: 1;
        min-width: 0;
    }

    .notification-title {
        font-weight: 600;
        font-size: 0.875rem;
        margin: 0 0 0.25rem;
    }

    .notification-message {
        font-size: 0.8125rem;
        color: color-mix(in srgb, var(--color-foreground) 70%, transparent);
        margin: 0 0 0.25rem;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .notification-time {
        font-size: 0.75rem;
        color: color-mix(in srgb, var(--color-foreground) 50%, transparent);
        margin: 0;
    }

    .notification-actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .unread-dot {
        width: 0.5rem;
        height: 0.5rem;
        background: #ef4444;
        border-radius: 50%;
    }

    .notification-delete-btn {
        width: 1.5rem;
        height: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        border: none;
        border-radius: 0.25rem;
        color: color-mix(in srgb, var(--color-foreground) 40%, transparent);
        cursor: pointer;
        opacity: 0;
        transition: all 0.2s;
    }

    .notification-item:hover .notification-delete-btn {
        opacity: 1;
    }

    .notification-delete-btn:hover {
        background: #ef4444;
        color: white;
    }

    /* Toast Notifications */
    .notification-toast,
    .simple-toast {
        position: fixed;
        top: 2rem;
        right: 2rem;
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 0.75rem;
        padding: 1rem 1.5rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        z-index: 9999;
        transform: translateX(400px);
        opacity: 0;
        transition: all 0.3s ease;
    }

    .notification-toast {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .notification-toast.show,
    .simple-toast.show {
        transform: translateX(0);
        opacity: 1;
    }

    .toast-icon {
        width: 2.5rem;
        height: 2.5rem;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 1.25rem;
    }

    .toast-content {
        flex: 1;
    }

    .toast-title {
        font-weight: 700;
        font-size: 0.875rem;
        margin: 0 0 0.25rem;
        color: #111827;
    }

    .toast-message {
        font-size: 0.75rem;
        color: #6b7280;
        margin: 0;
    }

    .simple-toast {
        color: white;
        font-size: 0.875rem;
        font-weight: 500;
    }

    @keyframes pulse-badge {
        0%,
        100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
    }

    @media (max-width: 640px) {
        .notification-toast,
        .simple-toast {
            top: 1rem;
            right: 1rem;
            left: 1rem;
            transform: translateY(-100px);
        }

        .notification-toast.show,
        .simple-toast.show {
            transform: translateY(0);
        }

        .filter-btn span {
            display: none;
        }

        .filter-btn {
            padding: 0.5rem;
            width: 2.5rem;
            justify-content: center;
        }
    }
</style>
