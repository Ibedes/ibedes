---
// Example: Enhanced base layout with all improvements integrated
import SEO from "../components/SEO.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Toast from "../components/common/Toast.astro";
import { GLOBAL } from "../lib/variables";

export interface Props {
    title: string;
    description: string;
    image?: string;
    type?: "website" | "article";
}

const {
    title,
    description,
    image = `${GLOBAL.rootUrl}/${GLOBAL.profileImage}`,
    type = "website",
} = Astro.props;
---

<!doctype html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- SEO Component -->
        <SEO
            title={title}
            description={description}
            image={image}
            type={type}
        />

        <!-- Preconnect to external domains for better performance -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link rel="preconnect" href="https://cdn.jsdelivr.net" />

        <!-- Font Awesome -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
            integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />

        <!-- Google Analytics (Replace with your GA4 ID) -->
        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"
        ></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", "G-XXXXXXXXXX");
        </script>

        <slot name="head" />
    </head>

    <body class="zag-bg zag-text min-h-screen flex flex-col">
        <!-- Skip to main content for accessibility -->
        <a href="#main-content" class="skip-link"> Skip to main content </a>

        <!-- Header -->
        <Header />

        <!-- Main Content -->
        <main id="main-content" class="flex-grow">
            <slot />
        </main>

        <!-- Footer -->
        <Footer />

        <!-- Toast Notifications -->
        <Toast position="bottom-right" />

        <!-- Initialize Analytics & Performance Monitoring -->
        <script>
            import {
                initScrollTracking,
                initTimeTracking,
            } from "../lib/analytics";
            import { initAllPerformanceMonitoring } from "../lib/performance";

            if (typeof window !== "undefined") {
                // Wait for page to fully load
                window.addEventListener("load", () => {
                    // Initialize engagement tracking
                    initScrollTracking();
                    initTimeTracking();

                    // Initialize performance monitoring
                    initAllPerformanceMonitoring();

                    // Log initialization in development
                    if (import.meta.env.DEV) {
                        console.log(
                            "âœ… Analytics & Performance Monitoring Initialized",
                        );
                    }
                });

                // Handle page visibility changes
                document.addEventListener("visibilitychange", () => {
                    if (document.hidden) {
                        // User left the page
                        if (typeof window.trackEngagement === "function") {
                            window.trackEngagement("page_hidden", 1);
                        }
                    } else {
                        // User returned to the page
                        if (typeof window.trackEngagement === "function") {
                            window.trackEngagement("page_visible", 1);
                        }
                    }
                });

                // Global error handler
                window.addEventListener("error", (event) => {
                    if (typeof window.trackError === "function") {
                        window.trackError(
                            event.error || event.message,
                            "global_error",
                        );
                    }
                });

                // Unhandled promise rejection handler
                window.addEventListener("unhandledrejection", (event) => {
                    if (typeof window.trackError === "function") {
                        window.trackError(event.reason, "unhandled_rejection");
                    }
                });
            }
        </script>

        <!-- Service Worker Registration (Optional - for PWA) -->
        <script is:inline>
            if ("serviceWorker" in navigator && !import.meta.env.DEV) {
                window.addEventListener("load", () => {
                    navigator.serviceWorker
                        .register("/sw.js")
                        .then((registration) => {
                            console.log("SW registered:", registration);
                        })
                        .catch((error) => {
                            console.log("SW registration failed:", error);
                        });
                });
            }
        </script>
    </body>
</html>

<style is:global>
    /* Ensure smooth scrolling */
    html {
        scroll-behavior: smooth;
    }

    /* Focus visible styles for accessibility */
    *:focus-visible {
        outline: 2px solid var(--color-zag-accent-dark);
        outline-offset: 2px;
    }

    .dark *:focus-visible {
        outline-color: var(--color-zag-accent-light);
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
            scroll-behavior: auto !important;
        }
    }

    /* Print styles */
    @media print {
        header,
        footer,
        .no-print {
            display: none !important;
        }

        a[href]::after {
            content: " (" attr(href) ")";
        }
    }
</style>
